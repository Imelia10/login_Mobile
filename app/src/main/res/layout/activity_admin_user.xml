<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="17dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/back_home1" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin User"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/tableLayoutUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FBDCDC"
            android:stretchColumns="1">

            <!-- Header Row -->
            <TableRow>
                <TextView
                    android:id="@+id/textId"
                    style="@style/TableCellStyle"
                    android:text="ID"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textFirstName"
                    style="@style/TableCellStyle"
                    android:text="Nama Awal"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textLastName"
                    style="@style/TableCellStyle"
                    android:text="Nama Akhir"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textPhone"
                    style="@style/TableCellStyle"
                    android:text="Nomor Telepon"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textEmail"
                    style="@style/TableCellStyle"
                    android:text="Email"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textPassword"
                    style="@style/TableCellStyle"
                    android:text="Password"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textAlamat"
                    style="@style/TableCellStyle"
                    android:text="Alamat"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textTtl"
                    style="@style/TableCellStyle"
                    android:text="Tanggal Lahir"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/imageUserPhoto"
                    style="@style/TableCellStyle"
                    android:text="Foto"
                    android:textStyle="bold"/>
            </TableRow>
        </TableLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan Id User"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/editUserId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#FBDCDC"
            android:padding="8dp"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/pensiledit" />

        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/tambah" />

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/hapus" />
    </LinearLayout>

</LinearLayout>

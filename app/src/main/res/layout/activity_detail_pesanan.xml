<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- HEADER TETAP -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/topbar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/panahkiri" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:text="Detail Barang"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- SCROLLABLE CONTENT MULAI DARI SINI -->
    <ScrollView
        android:id="@+id/scroll_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Gambar Produk -->
            <ImageView
                android:id="@+id/gambar_produk"
                android:layout_width="211dp"
                android:layout_height="208dp"
                android:layout_gravity="center"
                android:src="@drawable/dress" />

            <TextView
                android:id="@+id/nama_produk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dress"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/harga_produk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 50.000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="4dp" />

            <!-- Alamat Pengiriman -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="ALAMAT PENGIRIMAN"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:background="@drawable/box_background"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/alamat_pengiriman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rungkut Asri Timur, SBY"
                    android:focusable="false"
                    android:background="@android:color/transparent"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Pilihan Metode Pembayaran -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PILIH METODE PEMBAYARAN"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_background"
                android:orientation="vertical"
                android:elevation="2dp"
                android:padding="12dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/metode_pembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="COD (Cash On Delivery)"
                    android:focusable="false"
                    android:background="@android:color/transparent"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Informasi Detail -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical|end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Pesanan"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tanggal_pesanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28 Juni 2025"
                    android:textSize="14sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tipe Pengantaran"
                    android:textSize="12sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ekonomi"
                    android:textSize="14sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <View
                android:layout_width="358dp"
                android:layout_height="1.8dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@color/black"
                android:elevation="2dp" />

            <!-- Rincian Biaya dengan label dan nilai berdampingan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Amount -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Harga"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/harga_produk_rincian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 50.000"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Delivery Charge -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Delivery Charge"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/ongkir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 15.000"
                        android:textSize="14sp" />
                </LinearLayout>


                <!-- Discount -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Discount"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-Rp 15.000"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/total_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Rp 50.000"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>


            <!-- Tombol -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <!-- Tombol Batal (ImageView) -->
                <ImageView
                    android:id="@+id/batal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/batal"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="40dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Tombol Bayar (ImageView) -->
                <ImageView
                    android:id="@+id/bayar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/bayar"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="60dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tvSaldoPenjual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 0"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    android:textColor="@android:color/black" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

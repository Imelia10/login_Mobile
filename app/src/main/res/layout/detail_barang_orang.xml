<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top Bar -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/topbar"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/panahkiri"
                android:contentDescription="Kembali" />

            <TextView
                android:id="@+id/textHi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:text="Detail Barang"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Gambar Barang -->
        <ImageView
            android:id="@+id/imageBarang"
            android:layout_width="205dp"
            android:layout_height="205dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="98dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dress"
            android:contentDescription="Gambar Barang" />

        <!-- Konten Detail -->
        <LinearLayout
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_detail"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Nama, Harga & Chat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_marginTop="9dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/namaBarang"
                        android:text="Dress"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/hargaBarang"
                        android:text="Rp 50.000"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <!-- Tab Detail dan Ulasan -->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_weight="1"
                    android:text="Detail"
                    android:backgroundTint="#C9A9A6"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_weight="1"
                    android:text="Ulasan"
                    android:backgroundTint="#E5E5E5"
                    android:textColor="#888888"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Penjual -->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/profil1"
                    android:layout_width="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Thrift Shop SBY"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Aktif 2 menit yang lalu"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!-- Deskripsi -->
            <TextView
                android:text="Detail Produk"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Tombol Beli -->
            <ImageView
                android:id="@+id/upload_button"
                android:layout_width="224dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="25dp"
                android:layout_marginTop="75dp"
                android:contentDescription="Selesai"
                android:src="@drawable/buttonselesai" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
